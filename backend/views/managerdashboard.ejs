                                                            <label>Assigned Airport</label>
                                                        </section>
                                                        <section class="col-md-6">
                                                            <p><%= sampleData.assigned_airport %></p>
                                                        </section>
                                                    </section>
                                                    <section class="row">
                                                        <section class="col-md-6">
                                                            <label>Country</label>
                                                        </section>
                                                        <section class="col-md-6">
                                                            <p><%= sampleData.country %></p>
